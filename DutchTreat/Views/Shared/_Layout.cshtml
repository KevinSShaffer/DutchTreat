
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="~/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><i class="fa fa-paint-brush"></i> Dutch Treat</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">&#9776;</button>
        <div id="menu" class="collapse navbar-collapse">
            <div class="navbar-nav">
                <a class="nav-item nav-link" asp-controller="App" asp-action="Index">Home</a>
                <a class="nav-item nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                <a class="nav-item nav-link" asp-controller="App" asp-action="About">About</a>
            </div>
        </div>
    </nav>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>